    <script>
        /**
     * When document is ready , we initialize the application.
     */
        $(document).ready(function () {
            var myTank = new tank({
                id: 'my-tank-container',
                query: {
                    query: 'MATCH (n) OPTIONAL MATCH (n)-[r]->(m) RETURN n,r,m LIMIT 50'
                },
                neo4j: {
                    url: 'http://localhost:7474',
                    user: 'neo4j',
                    password: 'admin'
                },
                plugins: ['data', 'sigma_dragnode']
            });

        });
    </script>


